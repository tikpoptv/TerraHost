# TerraHost Environment Variables for Docker Compose / Coolify

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.terrahost.riffai.org
FRONTEND_PORT=3000
FRONTEND_EXTERNAL_PORT=3500

# Backend Configuration  
BACKEND_PORT=8000
BACKEND_EXTERNAL_PORT=3501

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=terrahost
DB_USER=postgres
DB_PASSWORD=password

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB

# Nextcloud Configuration
NEXTCLOUD_URL=http://localhost:8080
NEXTCLOUD_USERNAME=admin
NEXTCLOUD_PASSWORD=password

# Environment
NODE_ENV=production
